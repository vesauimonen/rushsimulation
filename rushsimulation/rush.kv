#:kivy 1.5.1
#:import window kivy.core.window

<Vehicle>:
    size: 16, 16
    canvas:
        Color:
            rgb: 1, .42, .2
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgb: 0, 0, 0


<RushSimulation>:
    start_pause_button: start_pause_button
    size: window.Window.size
    canvas:
        Color:
            rgb: .2, .3, .4
        Rectangle:
            pos: 0, self.height - 100
            size: self.width / 2 - 20, 100
        Rectangle:
            pos: self.width / 2 + 20, self.height - 100
            size: self.width / 2 - 20, 100
        Line:
            points: (0, self.height - 100, self.width / 2 - 30, self.height - 100, self.width / 2 - 30, self.height)
            width: 10
        Line:
            points: (self.width, self.height - 100, self.width / 2 + 30, self.height - 100, self.width / 2 + 30, self.height)
            width: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 15
        size: window.Window.width / 3, 60
        left: 0
        top: window.Window.height - 20
        Button:
            id: start_pause_button
            text: 'Start'
            bold: True
            font_size: 17
            on_press: root.start_pause_button_pressed()
        Button:
            text: 'Stop'
            bold: True
            font_size: 17
            on_press: root.stop_button_pressed()

