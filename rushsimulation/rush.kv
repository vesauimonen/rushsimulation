#:kivy 1.5.1
#:import window kivy.core.window

<Vehicle>:
    size: self.size
    canvas:
        Color:
            rgba: 1, 1, 1, 0.8
        Line:
            points: (self.center[0], self.center[1], self.center[0] + 6 * self.obstacle_avoider[0], self.center[1] + 6 * self.obstacle_avoider[1])
            width: 1
        Line:
            points: (self.center[0], self.center[1], self.center[0] + 4 * self.velocity[0], self.center[1] + 4 * self.velocity[1])
            width: 1
        Color:
            rgb: 1, .42, .2
        Ellipse:
            pos: self.pos
            size: self.size

<Wall>:
    size: self.size
    pos: self.pos
    canvas:
        Color:
            rgb: .9, .9, .9
        Rectangle:
            pos: self.pos
            size: self.size

<RushSimulation>:
    pos: 0, 0
    size: window.Window.size
    start_pause_button: start_pause_button
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 15
        size: window.Window.width / 3, 60
        left: 0
        bottom: 0
        Button:
            id: start_pause_button
            text: 'Start'
            bold: True
            font_size: 17
            on_press: root.start_pause_button_pressed()
        Button:
            text: 'Stop'
            bold: True
            font_size: 17
            on_press: root.stop_button_pressed()

