#:kivy 1.5.1
#:import window kivy.core.window

<Vehicle>:
    size: 16, 16
    canvas:
        Color:
            rgb: 1, .42, .2
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgb: 0, 0, 0

<Wall>:
    size: self.size
    pos: self.pos
    canvas:
        Color:
            rgb: .2, .3, .4
        Rectangle:
            pos: self.pos
            size: self.size


<RushSimulation>:
    start_pause_button: start_pause_button
    size: window.Window.size
    canvas:
        Color:
            rgb: .2, .3, .4
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 15
        size: window.Window.width / 3, 60
        left: 0
        top: 100
        Button:
            id: start_pause_button
            text: 'Start'
            bold: True
            font_size: 17
            on_press: root.start_pause_button_pressed()
        Button:
            text: 'Stop'
            bold: True
            font_size: 17
            on_press: root.stop_button_pressed()

